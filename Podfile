target :EDDSalesTracker do

  # Analytics
  pod "ARAnalytics/Crashlytics"
  pod 'ARAnalytics/GoogleAnalytics'

  # Gravatar
  pod "RFGravatarImageView", "~> 1.0"

  # Hamburger Menu
  pod 'NVSlideMenuController', '~> 1.5.6'

  # Gradients
  pod 'SAMGradientView', '~> 0.2'

  # Progress indicator
  pod 'SVProgressHUD', '~> 1.0'

end